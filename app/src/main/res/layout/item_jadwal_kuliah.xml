<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemjadwalkuliath_matkulTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_text_view"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="Mata Kuliah"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemjadwalkuliah_classroomTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Classroom"
        android:textAllCaps="true"
        android:textColor="@color/biru"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/itemjadwalkuliath_matkulTv"
        app:layout_constraintTop_toBottomOf="@+id/itemjadwalkuliath_matkulTv" />

    <TextView
        android:id="@+id/itemjadwalkuliah_pukulTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Pukul"
        android:textColor="@color/biru"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/itemjadwalkuliah_classroomTv"
        app:layout_constraintTop_toBottomOf="@+id/itemjadwalkuliah_classroomTv" />

    <Button
        android:id="@+id/itemjadwalkuliah_attendBtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_text_view"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Attend Now"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemjadwalkuliah_pukulTv" />

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/biru_tua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemjadwalkuliah_attendBtn" />

    <ImageView
        android:id="@+id/itemJadwalKuliah_checkedImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_checked_black"
        app:layout_constraintEnd_toEndOf="@+id/itemjadwalkuliath_matkulTv"
        app:layout_constraintTop_toBottomOf="@+id/itemjadwalkuliath_matkulTv" />

    <ImageView
        android:id="@+id/itemJadwalKuliah_cancelImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_cancel_black"
        app:layout_constraintEnd_toStartOf="@+id/itemJadwalKuliah_checkedImg"
        app:layout_constraintTop_toBottomOf="@+id/itemjadwalkuliath_matkulTv" />
</android.support.constraint.ConstraintLayout>