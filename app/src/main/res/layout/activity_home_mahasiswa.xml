<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeMahasiswaActivity"
    android:background="@color/biru">

    <TextView
        android:id="@+id/homeMahasiswa_labelTodayScheduleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:text="@string/home_mhs_today_shcedule"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homeMahasiswa_slideIndicatorImg"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/slide2"
        app:layout_constraintEnd_toEndOf="@+id/homeMahasiswa_labelTodayScheduleTv"
        app:layout_constraintStart_toStartOf="@+id/homeMahasiswa_labelTodayScheduleTv"
        app:layout_constraintTop_toBottomOf="@+id/homeMahasiswa_labelTodayScheduleTv" />

    <android.support.v4.view.ViewPager
        android:id="@+id/homeMahasiswa_viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeMahasiswa_slideIndicatorImg"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>